<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.hyxja.football.MainActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_gravity="center"
        android:gravity="center">
        <TextView
            android:id="@+id/team1_info_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="team1"
            android:textColor="#ff6100"
            android:textSize="20dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:text="vs"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"/>
        <TextView
            android:id="@+id/team2_info_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="team2"
            android:textColor="#0000ff"
            android:textSize="20dp"/>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="740dp"
        android:layout_height="462dp"
        android:layout_marginTop="24dp"
        android:gravity="center_horizontal">
        <RelativeLayout
            android:id="@+id/match_animation"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"/>
        <ImageView
            android:id="@+id/region_left_up"
            android:layout_width="211dp"
            android:layout_height="100dp"
            android:background="@drawable/region"/>
        <ImageView
            android:id="@+id/region_left_middle"
            android:layout_width="211dp"
            android:layout_height="262dp"
            android:layout_below="@id/region_left_up"
            android:background="@drawable/region"/>
        <ImageView
            android:id="@+id/region_left_down"
            android:layout_width="211dp"
            android:layout_height="100dp"
            android:layout_below="@id/region_left_middle"
            android:background="@drawable/region"/>
        <ImageView
            android:id="@+id/region_middle_up"
            android:layout_width="318dp"
            android:layout_height="100dp"
            android:layout_toRightOf="@id/region_left_up"
            android:layout_toEndOf="@id/region_left_up"
            android:background="@drawable/region"/>
        <ImageView
            android:id="@+id/region_middle"
            android:layout_width="318dp"
            android:layout_height="262dp"
            android:layout_below="@id/region_middle_up"
            android:layout_toEndOf="@id/region_left_middle"
            android:background="@drawable/region"
            android:layout_toRightOf="@id/region_left_middle" />
        <ImageView
            android:id="@+id/region_middle_down"
            android:layout_width="318dp"
            android:layout_height="100dp"
            android:layout_below="@id/region_middle"
            android:layout_toEndOf="@id/region_left_down"
            android:background="@drawable/region"
            android:layout_toRightOf="@id/region_left_down" />
        <ImageView
            android:id="@+id/region_right_up"
            android:layout_width="211dp"
            android:layout_height="100dp"
            android:layout_toRightOf="@id/region_middle_up"
            android:background="@drawable/region"/>
        <ImageView
            android:id="@+id/region_right_middle"
            android:layout_width="211dp"
            android:layout_height="262dp"
            android:layout_below="@id/region_right_up"
            android:layout_toRightOf="@id/region_middle"
            android:background="@drawable/region"/>
        <ImageView
            android:id="@+id/region_right_down"
            android:layout_width="211dp"
            android:layout_height="262dp"
            android:layout_toRightOf="@id/region_middle_down"
            android:layout_below="@id/region_right_middle"
            android:background="@drawable/region"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="200dp">
        <LinearLayout
            android:id="@+id/ll_overview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
            <android.support.v7.widget.RecyclerView
    android:id="@+id/Team1DataRecyclerView"
    android:layout_gravity="center_horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginRight="10dp"
    android:layout_weight="1"/>
            <android.support.v7.widget.RecyclerView
            android:id="@+id/Team2DataRecyclerView"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
    </LinearLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rc_team1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone">
        </android.support.v7.widget.RecyclerView>
        <android.support.v7.widget.RecyclerView
            android:id="@+id/rc_team2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone">
        </android.support.v7.widget.RecyclerView>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="50dp">
        <TextView
            android:id="@+id/text_overview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="#ff0000"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:text="overview"
            android:gravity="center"
            android:background="@drawable/graph_background"
            android:textSize="20dp"/>
        <TextView
            android:id="@+id/text_team1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="#000000"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:text="team1"
            android:gravity="center"
            android:background="@drawable/graph_background"
            android:textSize="20dp"/>
        <TextView
            android:id="@+id/text_team2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="#000000"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:text="team2"
            android:gravity="center"
            android:background="@drawable/graph_background"
            android:textSize="20dp"/>
    </LinearLayout>
</LinearLayout>
